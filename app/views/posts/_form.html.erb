<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1> Write Post </h1>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "field" %>
  </div>
  <div class="newbody">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "bodyfield" %>
  </div>
  <div>
    <%= f.label :author %><br>
    <%= f.text_field :author, class: "field" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
